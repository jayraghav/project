<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/etOldPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/old_pwd"
            android:textColorHint="@color/black"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_16"
            android:textCursorDrawable="@drawable/cursor_green"

            android:imeOptions="actionNext"
            android:textColor="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_2"/>
        <TextView
            android:id="@+id/tvErrorOldPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            android:text="@string/pwd_error"
            android:textColor="@color/colorRed"
            />


        <EditText
            android:id="@+id/etNewPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_pwd"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@drawable/cursor_green"

            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="@dimen/sp_16"
            android:imeOptions="actionNext"
            android:textColor="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:drawablePadding="@dimen/dp_8"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_2"/>
        <TextView
            android:id="@+id/tvErrorNewPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            android:text="@string/pwd_error"
            android:textColor="@color/colorRed"
            />


        <EditText
            android:id="@+id/etConfirmPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_pwd"
            android:textColorHint="@color/black"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_green"

            android:textSize="@dimen/sp_16"
            android:imeOptions="actionDone"
            android:textColor="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
          android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_2"/>
        <TextView
            android:id="@+id/tvErrorConfirmedPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            android:text="@string/pwd_error"
            android:textColor="@color/colorRed"

            />


        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGreen"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/update"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>
