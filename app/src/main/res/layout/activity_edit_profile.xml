<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loyalty.activity.customer.ProfileActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_10">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:layout_gravity="center"
                    android:src="@mipmap/round" />

                <ImageView
                    android:id="@+id/ivUploadImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/camera"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_marginBottom="@dimen/dp_30"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/first_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/sp_16"
                        android:padding="@dimen/dp_6"
                        android:background="@drawable/background_edittext"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"
                       />
                    <TextView
                        android:id="@+id/tv_errorfirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/error_email"
                        android:textColor="@color/color_red"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/last_name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="text"
                        android:padding="@dimen/dp_6"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"

                        android:background="@drawable/background_edittext"/>
                    <TextView
                        android:id="@+id/tv_errorlastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/error_email"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/email"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_6"
                        android:imeOptions="actionNext"
                        android:textColor="@color/lightBlack"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/background_edittext"
                        android:textSize="@dimen/sp_16"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:enabled="false"
                        android:editable="false"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"
                   />
                    <TextView
                        android:id="@+id/tv_erroremail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/error_email"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvMobileNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/mobile_number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:padding="@dimen/dp_6"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/sp_16"
                        android:maxLength="10"
                        android:background="@drawable/background_edittext"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20" />
                    <TextView
                        android:id="@+id/tv_errormobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/error_mobile"
                        android:textColor="@color/color_red"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvCardType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/country_code"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etCountryCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_20"
                        android:textSize="@dimen/sp_16"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColor="@color/lightBlack"
                        android:background="@drawable/background_edittext"
                        android:layout_marginLeft="@dimen/dp_10"
                       />
                    <TextView
                        android:id="@+id/tv_errorcardType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/error_email"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:id="@+id/llCardNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvCardNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/black"
                    android:text="@string/area_code"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etAreaCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_edittext"
                        android:padding="@dimen/dp_6"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:textColor="@color/lightBlack"
                        android:textSize="@dimen/sp_16"
                        android:maxLength="8"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_errorcardNumber"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_height="wrap_content"
                        android:text="@string/error_email"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvCvv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/cvv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/etCvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:padding="@dimen/dp_6"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/background_edittext"
                        android:singleLine="true"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/lightBlack"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/cvv_value"/>
                    <TextView
                        android:id="@+id/tv_errorCvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/error_email"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp_14"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">
                <TextView
                    android:id="@+id/tvExpiryDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/expiry_date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvExpiryDateValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:padding="@dimen/dp_6"
                        android:textColor="@color/lightBlack"
                        android:background="@drawable/background_edittext"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="@string/expiry_value"
                        android:drawableRight="@mipmap/calender"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
