<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvQuesNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_4"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/dp_14"
            android:text="@string/lorem_epsum_text"
            android:textColor="@color/colorLightBlack"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/llEmoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivHappy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sm2"/>
                <CheckBox
                    android:id="@+id/cbHappy"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:checked="false"
                    android:padding="@dimen/dp_5"
                    android:drawableLeft="@drawable/radio_selecter"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivJoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sm3"/>
                <CheckBox
                    android:id="@+id/cbJoke"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:checked="false"
                    android:padding="@dimen/dp_5"
                    android:drawableLeft="@drawable/radio_selecter"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivAngry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sm1"/>
                <CheckBox
                    android:id="@+id/cbAngry"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:button="@null"
                    android:checked="false"
                    android:padding="@dimen/dp_5"
                    android:drawableLeft="@drawable/radio_selecter"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="@dimen/dp_10"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llMultiChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMultiChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_8"
        android:scrollbars="none"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLightGrey"/>
        </LinearLayout>

<LinearLayout
    android:id="@+id/llComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">
    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/dp_14"
        android:padding="@dimen/dp_4"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:gravity="top"
        android:focusable="true"
        android:isScrollContainer="true"
        android:singleLine="false"
        android:hint="@string/answer" />
    <View
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGrey"/>
</LinearLayout>
</LinearLayout>
