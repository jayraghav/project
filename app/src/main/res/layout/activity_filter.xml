<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loyalty.activity.customer.YourLoyaltyActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="#f5f5f5">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btn_apply"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/cb_businesstype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:text="Business Type"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/cb_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:text="Distance"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/cb_popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:text="Popularity"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/cb_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:text="Product/Service"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@android:color/black" />
    </LinearLayout>

        <TextView
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textGreen"
            android:textColor="@android:color/black"
            android:text="Apply"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_10"/>

</LinearLayout>
