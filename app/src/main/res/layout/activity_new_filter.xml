<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sort"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"
        android:layout_weight="1">
    <RadioGroup
        android:id="@+id/rgRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbDistance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/distance"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/radio_selector"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <RadioButton
            android:id="@+id/rbPopularity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:drawableLeft="@drawable/radio_selector"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="@string/popularity"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/llBusinessType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="@dimen/dp_5">
        <CheckBox
            android:id="@+id/cbBusinessType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_bg"
            android:paddingLeft="5dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvBusinessType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/business_type"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawableRight="@mipmap/drop"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
        </LinearLayout>
    <TextView
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textGreen"
        android:textColor="@android:color/black"
        android:text="Apply"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:padding="@dimen/dp_10"/>
</LinearLayout>
