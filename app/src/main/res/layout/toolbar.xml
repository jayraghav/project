<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/textGreen"
        app:titleTextAppearance="@style/Widget.AppCompat.Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/iv_toolbar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:layout_gravity="left"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/ivHomeLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo2"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:textSize="@dimen/sp_18"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="visible"
            android:id="@+id/toolbar_title"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/iv_toolbar_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/crown"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="gone"
            android:layout_gravity="right"
           />

        <ImageView
            android:id="@+id/iv_toolbar_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fire"
            android:visibility="gone"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
  />
        <TextView
            android:id="@+id/toolbar_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:layout_gravity="right"
            android:visibility="gone"
            android:textSize="@dimen/sp_18"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@android:color/white"/>
    </android.support.v7.widget.Toolbar>
</LinearLayout>