<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.9"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/bg_edit_text"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@mipmap/search"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription" />
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search"
                android:padding="8dp"
                android:textCursorDrawable="@drawable/cursor_green"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:background="@drawable/bg_edit_text"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ivFilter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@mipmap/filter2"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription"
            android:visibility="visible"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rgType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbBusiness"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Search Business"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/radio_selector"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <RadioButton
            android:id="@+id/rbItems"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:drawableLeft="@drawable/radio_selector"
            android:drawablePadding="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Search Items"/>
    </RadioGroup>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvWhatsHot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/tvNoDealFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_deals_found"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"/>
    </FrameLayout>
</LinearLayout>
