<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fmHotDealRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivHotdealImages"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icecream"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCafeAssistOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cafe_assist"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20" />
                <TextView
                    android:id="@+id/tvCafeAssist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cafe_assist"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:text="@string/discount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:text="@string/discount"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvRedeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redeem"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_redeem"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>
    </FrameLayout>
    <!-- <TextView
         android:id="@+id/tvNoDealFound"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/no_hot_deals"
         android:layout_gravity="center_horizontal|center_vertical"
         android:gravity="center"
         android:visibility="visible"
         android:textColor="@color/black"
         android:textSize="@dimen/sp_16"/>-->
</LinearLayout>
