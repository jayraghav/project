<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.loyalty.activity.customer.ForgotPasswordActivity"
    android:background="@mipmap/bg">
    <include layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_your_password"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>
    <TextView
        android:id="@+id/tvEnterEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_email"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/email2"
            android:hint="@string/email"
            android:textColorHint="@color/lightGreen"
            android:textCursorDrawable="@drawable/cursor_green"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/sp_16"
            android:imeOptions="actionDone"
            android:textColor="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:drawablePadding="@dimen/dp_8"
            android:background="@null"/>
        <View
            android:id="@+id/viewEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/lightGreen"
            android:layout_marginTop="@dimen/dp_2"/>
        <TextView
            android:id="@+id/tv_erroremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_email"
            android:textColor="@color/color_red"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGreen"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/Submit"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>
